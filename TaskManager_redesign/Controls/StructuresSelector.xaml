                    <TextBlock Text="Руководство" Margin="4 0 0 0" VerticalAlignment="Center"/>
                    <e:Interaction.Triggers>
                        <e:EventTrigger EventName="Click">
                            <e:InvokeCommandAction Command="{Binding Source={StaticResource MainViewModel}, Path=ChangeStructureFilter}" CommandParameter="1"/>
                        </e:EventTrigger>
                    </e:Interaction.Triggers>
                </Button>
